
@{
    ViewData["Title"] = "CreatePhone";
}

@model Learn.TagHelpers.Models.Phone

<h2>Добавление телефона</h2>

<form asp-action="CreatePhone" asp-controller="Learn" asp-antiforgery="true">
    <div>
        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" />
        </div>
        <div>
            <label asp-for="Price"></label>
            <input asp-for="Price" />
        </div>
        <div>
            <label asp-for="CompanyId"></label>
            <select asp-for="CompanyId" asp-items="ViewBag.Companies"></select>
        </div>
        <div>
            <input type="submit" value="Save" />
        </div>
    </div>
</form>

