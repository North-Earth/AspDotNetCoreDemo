@{
    string head = "🎈Hello world";
    head = head + "!";

    bool isEnabled = false;

    int y = 6;
}
@* Пример комментария *@

@* Управляющие конструкции *@
@if (isEnabled)
{
    <h3>Добро пожаловать</h3>
}
else
{
    <h3>@head</h3>
}

<text>Пример 1 🎂</text>@* Вывод значений без HTML синтаксиса*@

@* Пример switch *@
@switch (y)
{
    case 5:
        <p>@(y * y)</p>
        break;
    case 6:
        <p>@(y + y)</p>
        break;
}

@* Пример циклов *@
@for (var i = 1; i < 6; i++)
{
    <p>Строка: @i</p>
}

@{
    int a = 1;
}

@while (a < 6)
{
    <p>Строка: @a</p>
    a++;
}

@{
    int z = 1;
}

@do
{
    <p>Строка: @z</p>
    z++;
}
while (z < 6);
<p>Конец</p>

