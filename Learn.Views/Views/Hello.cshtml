    string[] cars = { "Tesla Model S", "Tesla Model X", "Tesla Model 3" };
}
<ul>
    @foreach (var car in cars)
    {
        <li>@car</li>
    }
</ul>

@* Обработка исключений *@
@try
{
    throw new InvalidOperationException("Что-то пошло не так");
}
catch (Exception ex)
{
    <p>Возникло исключение: @ex.Message</p>
}
finally
{
    <p>Блок finally</p>
}

@* Вывод внутри блока кода *@
@if (isEnabled)
{
    @: Добро пожаловать
}

@* Функции *@
@functions
{
public int GetFactorial(int n)
{
    int result = 1;
    for (int i = 1; i <= n; i++)
        result *= i;
    return result;
}
}
<div>Факториал числа 6 равен: @GetFactorial(6)</div>