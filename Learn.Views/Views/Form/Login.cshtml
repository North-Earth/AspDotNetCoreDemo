@{
    ViewData["Title"] = "Login";
}
<form method="post">
    <p>
        <label>Логин:</label><br />
        <input type="text" name="login" />
    </p>

    <p>
        <label>Пароль:</label><br />
        <input type="password" name="password" />
    </p>

    <p>
        <label>Возраст:</label><br />
        <input type="number" name="age" />
    </p>

    <p>
        <label>Комментарий:</label><br />
        <textarea name="comment"></textarea>
    </p>

    <p>
        <label>Женат/Замужем:</label><br />
        <input type="checkbox" name="isMarried" value="true" />
    </p>

    <p>
        <input name="color" type="radio" value="red" />
        <span>красный</span> <br />
        <input name="color" type="radio" value="blue" />
        <span>синий</span> <br />
        <input checked="checked" name="color" type="radio" value="green" />
        <span>зеленый</span>
    </p>

    <p>
        <label for="car">Выберите модель:</label>
        <select name="car">
            <option value="Honda Civic">Хонда</option>
            <option value="Nissan Skyline">Ниссан</option>
        </select>
    </p>

    <p>
        <label for="cars">Выберите несколько моделей:</label>
        <select multiple name="cars">
            <option value="Honda Civic">Хонда</option>
            <option value="Nissan Skyline">Ниссан</option>
        </select>
    </p>


    <p>
        <input type="submit" value="Отправить" />
    </p>
</form>